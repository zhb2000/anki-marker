{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "category": "Education",
    "shortDescription": "Anki 划词助手",
    "longDescription": "Anki 划词助手是一个制作 Anki 卡片的工具，你可以用它标记句子中的生词，通过“单词结合上下文”的方式更好地背单词。",
    "active": true,
    "targets": ["nsis", "msi", "deb", "rpm"],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "languages": [
          "SimpChinese"
        ]
      },
      "wix": {
        "language": "zh-CN",
        "upgradeCode": "b8333182-e22f-5367-8f6f-ec9d68f60947"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [
      "resources/dict.db",
      "resources/config-template.toml"
    ]
  },
  "productName": "Anki 划词助手",
  "mainBinaryName": "Anki 划词助手",
  "version": "../package.json",
  "identifier": "com.zhb2000.anki-marker",
  "plugins": {},
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Anki 划词助手",
        "width": 800,
        "height": 500
      }
    ],
    "security": {
      "csp": null
    }
  }
}
